<h2>Cadastro - Recrutador</h2>

<%= link_to 'Voltar', root_path %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "recruiters/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, 'E-mail' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "E-mail" %>
  </div>

  <div class="field">
    <%= f.label :password, 'Senha' %>
    <% if @minimum_password_length %>
    <em>(m√≠nimo <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "Senha" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Confirme a senha' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Confirme a senha" %>
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar" %>
  </div>
<% end %>

<%= render "recruiters/shared/links" %>
