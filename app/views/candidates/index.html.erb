<h1> Painel do candidato - <%= current_candidate.full_name %></h1>

<%= link_to 'Editar perfil' %>
<%= link_to 'Encontrar vagas', jobs_path %>
<%= link_to 'Voltar', root_path %>

<h2>Ofertas recebidas: <%= @applications.approved.count %></h2>

<% @applications.each do |application| %>
  <% if application.approved? %>
    <p><%= application.job.title %> - <%= application.job.company.name %> 
    <%= link_to 'Avaliar oferta', offer_path(application) %></p>
    <hr>
  <% end %>
<% end %>

<h2>Minhas candidaturas: <%= @applications.count %></h2>

<% @applications.each do |application| %>
  <% if application.pending? %>
    <p><%= application.job.title %> - <%= application.job.company.name %> 
    <%= link_to 'Acompanhar candidatura', application_path(application) %></p>
    <hr>
  <% end %>
<% end %>
